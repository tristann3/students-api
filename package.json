{
  "name": "students-api",
  "version": "1.0.0",
  "description": "A students REST API using express, mongoose in ES6 with code coverage",
  "author": "Tristan Thompson <tristan15thompson@gmail.com>",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=5.6.0",
    "yarn": ">=1.5.1"
  },
  "scripts": {
    "start": "nodemon src/server.js",
    "start:debug": "cross-env DEBUG=auth-api-starterpack:* yarn start",
    "lint": "esw *.js server config --color",
    "lint:watch": "yarn lint -- --watch",
    "precommit": "yarn lint && yarn test",
    "test": "mocha src/test",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --ui bdd --reporter spec --colors server --recursive",
    "test:check-coverage": "yarn test:coverage && istanbul check-coverage",
    "report-coverage": "coveralls < ./coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:tristann3/students-api.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "es6",
    "mocha",
    "REST",
    "API",
    "makeschool",
    "authenticated",
    "MVC"
  ],
  "dependencies": {
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "1.18.2",
    "chai": "4.1.2",
    "chai-http": "^4.3.0",
    "cookie-parser": "^1.4.5",
    "cors": "2.8.4",
    "debug": "^2.4.5",
    "docsify-cli": "^4.4.2",
    "dotenv": "^4.0.0",
    "express": "4.16.3",
    "express-handlebars": "^5.2.1",
    "express-jwt": "5.3.1",
    "express-validator": "^6.10.0",
    "http-status": "1.0.1",
    "joi": "10.6.0",
    "jsonwebtoken": "7.1.9",
    "method-override": "^2.3.10",
    "mongoose": "^5.11.19",
    "mocha": "^3.5.0",
    "nodemon": "^2.0.7"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "5.1.4",
    "cz-conventional-changelog": "1.2.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-watch": "2.1.14",
    "husky": "0.14.3",
    "istanbul": "1.1.0-alpha.1",
    "supertest": "3.0.0",
    "supertest-as-promised": "4.0.2",
    "validate-commit-msg": "^2.14.0"
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
